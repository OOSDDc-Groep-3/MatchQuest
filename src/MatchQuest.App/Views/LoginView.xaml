<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:MatchQuest.App.ViewModels"
             x:Class="MatchQuest.App.Views.LoginView"
             x:DataType="vm:LoginViewModel">
    <StackLayout Padding="20" Spacing="10" VerticalOptions="Center">

        <HorizontalStackLayout>
            <Image Source="matchquest.png" VerticalOptions="Center" HorizontalOptions="Center" WidthRequest="150" HeightRequest="200"/>
            <Label Text="MATCHQUEST" FontAttributes="Bold" TextColor="#c0ffee" FontSize="32" VerticalOptions="Center" HorizontalOptions="Start" />

        </HorizontalStackLayout>

        <Label Text="E-mail" FontAttributes="Bold" TextColor="#FFFFFF" FontSize="20" HorizontalOptions="Start" Padding="0,5,0,0"  />
        <Entry Placeholder="Email" BackgroundColor="#C6C2C2" Text="{Binding Email}" Keyboard="Email"  />

        <Label Text="Password" FontAttributes="Bold" TextColor="#FFFFFF" FontSize="20" HorizontalOptions="Start" Padding="0,5,0,0"  />
        <Entry Placeholder="Password" BackgroundColor="#C6C2C2" Text="{Binding Password}" IsPassword="True"  />

        <Button BackgroundColor="#c0ffee" FontAttributes="Bold" TextColor="#383535" Text="Login" Command="{Binding LoginCommand}" Margin="0,39,0,0"  />

        <Label TextColor="#c0ffee" FontAttributes="Bold" Text="Not a member yet?" VerticalOptions="Center" Padding="0,5,0,0"  />
        <Button BackgroundColor="#383535" FontAttributes="Bold" TextColor="#c0ffee" Text="Register" Command="{Binding RegisterCommand}" Padding="0,5,0,0"  />
        
        <Label Text="{Binding LoginMessage}" TextColor="Red" />
    </StackLayout>
</ContentPage>