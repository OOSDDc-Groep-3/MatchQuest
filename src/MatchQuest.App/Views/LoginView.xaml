<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:MatchQuest.App.ViewModels"
             x:Class="MatchQuest.App.Views.LoginView"
             x:DataType="vm:LoginViewModel"
             BackgroundImageSource="background.png"
             BackgroundColor="Transparent">

    <Grid RowDefinitions="*" ColumnDefinitions="0.9*,0.8*">
        <BoxView Margin="0"
                 Grid.Column="0"
                 Grid.ColumnSpan="2"
                 Color="#202022"
                 Opacity="0.7"
                 HorizontalOptions="Fill"
                 VerticalOptions="Fill"
                 InputTransparent="True" />
        <Border Margin="40"
                Grid.Column="0"
                Grid.ColumnSpan="2"
                Background="#202022"
                Opacity="0.8"
                Stroke="#c0ffee"
                StrokeShape="RoundRectangle 30"
                StrokeThickness="3"
                HorizontalOptions="Fill"
                VerticalOptions="Fill"
                InputTransparent="True" />

        <StackLayout Padding="150,0,150,150" Spacing="10" VerticalOptions="Center">
            <HorizontalStackLayout>
                <Image Margin="-80,-60,-50,-50" Source="matchquest.png" VerticalOptions="Center" HorizontalOptions="Center" WidthRequest="250" HeightRequest="250"/>
                <Label Text="MATCHQUEST" FontAttributes="Bold" TextColor="#c0ffee" FontSize="40" VerticalOptions="Center" HorizontalOptions="Start" />
            </HorizontalStackLayout>

            <Label Margin="0,80,0,0" Text="E-mail" FontAttributes="Bold" TextColor="#FFFFFF" FontSize="20" HorizontalOptions="Start" Padding="0,5,0,0"  />
            <Entry Placeholder="Email" FontAttributes="Bold" TextColor="#383535" BackgroundColor="#C6C2C2" Text="{Binding Email}" Keyboard="Email"  />

            <Label Text="Password" FontAttributes="Bold" TextColor="#FFFFFF" FontSize="20" HorizontalOptions="Start" Padding="0,5,0,0"  />
            <Entry Placeholder="Password" FontAttributes="Bold" TextColor="#383535" BackgroundColor="#C6C2C2" Text="{Binding Password}" IsPassword="True"  />

            <Button BackgroundColor="#c0ffee" FontAttributes="Bold" TextColor="#383535" Text="Login" FontSize="20" Command="{Binding LoginCommand}" Margin="0,50,0,0" Padding="0,0,0,0" />

            <Label Margin="0,10,0,0" TextColor="#c0ffee" FontAttributes="Bold" Text="Not a member yet?" VerticalOptions="Center" Padding="0,0,0,0"  />
            <Button BackgroundColor="#383535" FontAttributes="Bold" TextColor="#c0ffee" Text="Register" FontSize="20" Command="{Binding RegisterCommand}" Padding="0,0,0,0"  />

            <Label Text="{Binding LoginMessage}" TextColor="Red" />
        </StackLayout>

        <Image Grid.Column="1"
               Margin="13,113,113,113"
               Source="background.png"
               Aspect="AspectFill"
               HorizontalOptions="Center"
               VerticalOptions="Center"
               InputTransparent="False" />

        <Border Margin="0,100,100,100"
                 Grid.Column="1"
                 Grid.ColumnSpan="1"
                 Background="#202022"
                 Opacity="0.65"
                 Stroke="#c0ffee"
                 StrokeShape="RoundRectangle 30"
                 StrokeThickness="3"
                 HorizontalOptions="Fill"
                 VerticalOptions="Fill"
                 InputTransparent="True" />

        <Label Grid.Column="1"
               Margin="60,650,100,100"
               FontSize="36"
               TextColor="#c0ffee"
               FontAttributes="Bold"
               Text="YOUR MATCH,&#x0A;OUR QUEST"
               VerticalOptions="Center"
               Padding="0,5,0,0"  />

    </Grid>
</ContentPage>